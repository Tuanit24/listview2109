<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dong_mon_an">


    <ImageView
        android:id="@+id/imageviewHinh"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:padding="10sp" />

    <TextView
        android:id="@+id/textviewTen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/imageviewHinh"
        android:text="Item"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textviewMoTa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textviewTen"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/imageviewHinh"
        android:text="Mô tả"
        android:textColor="@color/purple_500"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/text_giatien"
        android:layout_width="158dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="231dp"
        android:layout_marginLeft="62dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="22dp"
        android:layout_toRightOf="@id/textviewTen"
        android:paddingLeft="100dp"
        android:text="6$"
        android:textColor="#333CE6"
        android:textSize="25sp"
        android:textStyle="bold|italic" />


</RelativeLayout>